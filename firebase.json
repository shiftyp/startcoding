{
  "hosting": {
    "public": "./packages/frontend/ui/public",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "/projects/**",
        "destination": "/index.html"
      },
      {
        "source": "/code/**",
        "function": "code"
      }
    ]
  },
  "functions": [
    {
      "source": "./functions/code",
      "codebase": "default",
      "runtime": "nodejs18"
    }
  ],
  "storage": {
    "rules": "storage.rules"
  }
}